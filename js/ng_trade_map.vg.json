{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "EU Natural Gas Imports",
  
  "config": {
    "background": null,
    "title": {"font": "Montserrat", "fontSize": 24, "fontWeight": 900,"anchor":"middle"}
  },

 "params": [
    {
      "name": "year_slider",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
   ],
"vconcat":[
  {
  "width": 560,
  "height": 539,
  

  "projection": {
      "type": "conicEqualArea",
      "center": [ -40, 68 ],
      "parallels": [ 40, 66 ],
      "scale": 600
    },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "datum.properties.ADM0_A3_BR",
          "as": "to"
        },
        {
          "calculate": "'Import data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "lightslategray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },
      "transform": [
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" },
        
        {
          "lookup": "to",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/js/EU.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_0_countries"
              }
            },
            "key": "properties.ADM0_A3_BR",
            "fields": [ "properties", "type", "geometry" ]
          }
        }
      ],

      "params": [
        {
          "name": "select_country",
          "value":{"to":["UKR"],"vlPoint":{"or":[{"to":"UKR"}]}},
          "select": {
            "type": "point",
            "clear":false,
            "fields": [ "to" ],
            "toggle": "false"
          }
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke":"white"
      },

      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "value",
            "type": "quantitative",
            "format": ".3s",
            "title": "Total Imports (TJ)"
          }
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" }
      ],

      "mark": {
        "type": "circle",
        "color": "#93BDF1",
        "stroke":"white",
        "opacity": 0.5
      },
      "encoding": {
        "size": {
          "legend": null,
          "field": "value",
          "type": "quantitative",
          "scale": {
            "domain": [ 0, 5000000 ],
            "range": [ 0, 3000 ]
          }
        },
        "latitude": {
          "field": "to_lat"
        },
        "longitude": {
          "field": "to_lon"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "filter": "datum.from!='TOTAL'" },
        { "filter": "datum.from!=datum.to" },
        { "filter": "datum.year==year_slider" }
      ],

      "mark": {
        "type": "rule",
        "strokeCap": "round",
        "color": "#FDBE4B"
      },

      "encoding": {
        "strokeWidth": {
          "field": "value",
          "legend": null,
          "type": "quantitative",
          "scale": {
            "domain": [ 0, 5000000 ],
            "range": [ 2, 20 ]
          }
        },
        "longitude": {
          "field": "to_lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "to_lat",
          "type": "quantitative"
        },
        "longitude2": { "field": "from_lon" },
        "latitude2": { "field": "from_lat" }
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" }
      ],

      "mark": {
        "type": "circle",
        "color": "#93BDF1",
        "stroke": "white",
        "opacity": 1
      },
      "encoding": {
        "size": {
          "legend": null,
          "field": "value",
          "type": "quantitative",
          "scale": {
            "domain": [ 0, 5000000 ],
            "range": [ 0, 3000 ]
          }
        },
        "latitude": {
          "field": "to_lat"
        },
        "longitude": {
          "field": "to_lon"
        }
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "filter": "datum.from!='TOTAL'" },
        { "filter": "datum.from!=datum.to" },
        { "filter": "datum.year==year_slider" }
      ],

      "mark": {
        "type": "circle",
        "color": "#FDBE4B",
        "stroke": "white",
        "opacity": 1
      },
      "encoding": {
        "size": {
          "legend": null,
          "field": "value",
          "type": "quantitative",
          "scale": {
            "domain": [ 0, 5000000 ],
            "range": [ 0, 3000 ]
          }
        },
        "latitude": {
          "field": "from_lat"
        },
        "longitude": {
          "field": "from_lon"
        }
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" },
        { "filter": "datum.value!=0" },
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        {
          "calculate": "datum.value + ' TJ'",
          "as": "note"
        }
      ],

      "mark": {
        "type": "text",
        "color": "black",
        "baseline": "bottom",
        "font": "Lato",
        "fontSize": 11,
        "fontWeight": 900
      },
      "encoding": {
        "text": { "field": "to_name" },
        "latitude": {
          "field": "to_lat"
        },
        "longitude": {
          "field": "to_lon"
        }
      }

    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.from=='TOTAL'" },
        { "filter": "datum.year==year_slider" },
        { "filter": "datum.value!=0" },
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "calculate": "format(datum.value, '.3s') + ' TJ'", "as": "val_note"}
      ],

      "mark": {
        "type": "text",
        "color": "black",
        "baseline": "top",
        "font": "Lato",
        "fontSize": 12,
        "fontWeight": 500
      },
      "encoding": {
        "text": {
          "field": "val_note"
        },
        "latitude": {
          "field": "to_lat"
        },
        "longitude": {
          "field": "to_lon"
        }
      }

    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        { "filter": "datum.from!='TOTAL'" },
        { "filter": "datum.from!=datum.to" },
        { "filter": "datum.year==year_slider" },
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        }

      ],

      "mark": {
        "type": "text",
        "color": "black",
        "baseline": "bottom",
        "font": "Lato",
        "fontSize": 10,
        "fontWeight": 900
      },
      "encoding": {
        "text": { "field": "from_name" },
        "latitude": {
          "field": "from_lat"
        },
        "longitude": {
          "field": "from_lon"
        }
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        { "filter": "datum.from!='TOTAL'" },
        { "filter": "datum.from!=datum.to" },
        { "filter": "datum.year==year_slider" },
        { "calculate": "format(datum.value, '.3s') + ' TJ'", "as": "val_note"}
      ],

      "mark": {
        "type": "text",
        "color": "black",
        "baseline": "top",
        "font": "Lato",
        "fontSize": 10,
        "fontWeight": 500
      },
      "encoding": {
        "text": {
          "field": "val_note"
        },
        "latitude": {
          "field": "from_lat"
        },
        "longitude": {
          "field": "from_lon"
        }
      }
    }
  ]},
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Natural_gas_imports.csv"
      },
      "height": 100,
      "width":470,
      "center":true,
      "mark": "area",

      "transform": [
        {
          "filter": {
            "param": "select_country",
            "empty": false
          }
        },
        {"filter":"datum.from!= 'TOTAL'"},
        { "calculate": "datum.year", "as": "xyear"},
        { "calculate": "format(datum.value, '.3s') + ' TJ'", "as": "val_note"}
      ],

      "encoding": {
        "x": {
          "field": "year",
           "title":"Year"
           },
        "y": {
          "field": "value",
          "title":"Imports (TJ)", 
          "type": "quantitative",
          "axis":{"format":".3s"}
          },
        "color": {
            "field": "from",
            "type": "nominal",
            "title": "Source",
            "legend":{
              "orient": "bottom",
              "offset":-10,
              "labelFontSize":8,
              "labelOffset":1,
              "direction": "horizontal",
              "columns":12
            }  
        },
        "tooltip":[
          {
            "field": "from_name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "val_note",
            "type": "nominal",
            "title": "Imports"
          }
        ]
      }
    }
  ]
}
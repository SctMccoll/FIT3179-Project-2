{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Dependence Map",
  "width":750,

  "config": {
    "background": null,
    "title": {"font": "Montserrat", "fontSize": 24, "fontWeight": 900, "anchor":"middle"}
  },

  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/Energy_Dependence_Time.csv"
  },
 "params": [
    {
      "name": "year_filter",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
   ],
"vconcat":[
  {
    "width": 600,
    "height": 500,
    "projection": {
      "type": "conicEqualArea",
      "center": [ 30, 66 ],
      "parallels": [ 40, 65 ],
      "scale": 750
    },
   
    "layer": [

    {
      
      "data": {
        "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/js/EU.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],

      

      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },

    {
      "transform": [
        {
          "lookup": "COUNTRY",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/js/EU.topojson",
              "format": { 
                "type": "topojson",
                "feature": "ne_50m_admin_0_countries"
              }
            },
            "key": "properties.ADM0_A3_BR",
            "fields": [ "properties", "type", "geometry" ]
          }
        },
        { "filter": "datum.YEAR==year_filter" },
        {
          "calculate": "if(datum.PC_DEP!=null,max(datum.PC_DEP/100,-1),null)",
          "as": "Energy Dependence"
        },
        {
          "calculate": "if(datum.PC_DEP!=null,datum.PC_DEP/100,null)",
          "as": "Tooltip Dependence"
        }
      ],

      "params": [
        {
          "name": "select_country",
          "value": {"COUNTRY":["DEU"]},
          "select": {
            "type": "point",
            "clear":false,
            
            "fields": [ "COUNTRY" ],
            "toggle": "false"
          }
        }
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Energy Dependence",
          "type": "quantitative",
          "scale": {
            "scheme": "blueorange",
            "type": "linear",
            "domain": [ -1, 1 ]
          },
          "legend":{
            "direction":"vertical",
            "orient":"none",
            "legendY":70,
            "legendX":-50,
            "fillColor":null,
            "titleFont": "Lato",
            "format":".1%",
            "titleFontSize":14
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Tooltip Dependence",
            "type": "quantitative",
            "format": ".1%",
            "title": "Dependence"
          }
        ]
      }
    },
    {
        "transform": [
          {
            "filter": {
              "param": "select_country",
              "empty": false
            }
          },
          {"calculate": "'Country: ' + datum.NAME", "as": "country_note"}
          ],

        "mark": {
          "type": "text",
          "color": "black",
          "font": "Montserrat",
          "align":"left",
          "x":10,
          "y":520,
          "fontSize": 14,
          "smooth":true
        },
        "encoding": {
          "text": { "field": "country_note" }
        }
      }
  ]

  },
  {
    
    "height": 100,
    "width":600,
    "mark": {"type": "line",
    "color":"#f7b565"},
    "transform": [
      {
        "filter": {
          "param": "select_country",
          "empty": false
        }
      },
      { "calculate": "datum.YEAR", "as": "xyear"},
      { "calculate": "format(datum.PC_DEP, '.3f') + ' %'", "as": "val_note"}
    ],
    "encoding": {
      "x": {
        "field": "xyear",
        "title":"Year"
        },
      "y": {
        "field": "PC_DEP",
        "title":"Depedence (%)", 
        "type": "quantitative",
        "scale":{"domainMax":100}
        }
    }
  }
    
  ]
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.5.json",
  "width": 350,
  "height": 350,

  "config": {
    "background": null
  },

  "data": {
    "url": "https://raw.githubusercontent.com/SctMccoll/FIT3179-Project-2/main/Data/electricity_heat_production.csv"
  },

  "params": [
    {
      "name": "country_select",
      "value": "Germany",
      "bind": {
        "input": "select",
        "options": ["Germany", "Spain", "France", "Italy", "Netherlands", "Poland"],
        "name": "Country"
      }
    }
  ],

  "transform": [
    { "filter": "datum.country==country_select" },
    { "filter": "datum.product!='Total'" }
  ],

  "mark": "bar",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field":"value",
      "title":" Total Consumption (TJ)",
      "type": "quantitative"
    },
    "color": {
      "field": "product",
      "type": "nominal",
      "title": "Product",
      "scale":{
        "domain": [
          "Solid fossil fuels",
          "Natural gas",
          "Nuclear heat",
          "Oil and petroleum",
          "Renewables and biofuels"
        ],
        "range":[
          "#7f7f7f",
          "#ff7f0e",
          "#bcbd22",
          "#1f77b4",
          "#2ca02c"
        ]
      }
    }
  }
}
